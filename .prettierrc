{
    "trailingComma": "none",
    "tabWidth": 4,
    "printWidth": 150,
    "bracketSpacing": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "parser": "babel",
    "overrides": [
        {
            "files": "**.html",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": "*.css",
            "options": {
                "parser": "css"
            }
        }
    ]
}